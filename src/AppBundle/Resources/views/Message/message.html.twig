{% extends("@App/layout.html.twig") %}
{% block subnavbar %}
    <div class="col-lg-12">
        <h1 class="text-center text-navy title-salon">Messages</h1>
    </div>
{% endblock %}
{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <a href="{{ path('homepage') }}" class="btn btn-sm btn-info pull-right">Accueil</a>
                        <div>Application pour le <strong class="text-navy">Titre pro</strong></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <div class="ibox chat-view">

                    <div class="ibox-title">
                        Liste des messages:
                    </div>


                    <div class="ibox-content">

                        <div class="row">

                            <div class="col-md-12 ">
                                <div class="chat-discussion" id="data-message">
                                    {% if messages|length > 0 %}
                                        {{ include('AppBundle:Message:message.detail.html.twig') }}
                                    {% else %}
                                        <h1 class="text-center text-danger">Pas encore de messages!</h1>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="chat-message-form">
                                    <div class="form-group">
                                        <input class="form-control pseudo-input" name="pseudo" placeholder="Entrer votre pseudo"/>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control message-input" name="message" placeholder="Entrer votre message"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button id="message-submit" class="message-submit m-t-sm btn btn-primary btn-block btn-sm" type="submit" disabled>Envoyer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
   {% block appendJS %}
   {% endblock %}